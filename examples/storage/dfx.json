{
    "canisters": {
        "stable": {
            "type": "custom",
            "build": [
                "cargo test -p stable update_candid -- --nocapture",
                "cargo build --target wasm32-unknown-unknown --release",
                "ic-wasm target/wasm32-unknown-unknown/release/stable.wasm -o sources/source_opt.wasm metadata candid:service -f sources/source.did -v public",
                "ic-wasm sources/source_opt.wasm -o sources/source_opt.wasm shrink"
            ],
            "wasm": "sources/source_opt.wasm",
            "candid": "sources/source.did"
        }
    }
}
